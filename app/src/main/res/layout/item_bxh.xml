<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="@dimen/hight_item_bottom">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/gray"
        android:paddingLeft="@dimen/dp10"
        android:paddingRight="@dimen/dp10" />

    <LinearLayout
        android:layout_centerVertical="true"
        android:id="@+id/ll_stt"
        android:layout_width="@dimen/dp35"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_stt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/font1"
            android:gravity="center"
            android:text="10"
            android:textColor="@color/red_test365"
            android:textSize="@dimen/text_20sp"
            android:textStyle="bold" />


    </LinearLayout>

    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/img_avata"
        android:layout_width="@dimen/item_avata_bxh"
        android:layout_height="@dimen/item_avata_bxh"
        android:layout_toRightOf="@id/ll_stt"
        android:padding="@dimen/dp2"
        android:src="@drawable/avatar_default" />

    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_avata">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:maxLines="2"
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp1"
                android:text="Họ tên"
                android:textColor="@color/black"
                android:textSize="@dimen/text_14sp" />

            <TextView
                android:singleLine="true"
                android:id="@+id/txt_class"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp1"
                android:text="Họ tên"
                android:textColor="@color/black"
                android:textSize="@dimen/text_14sp" />

            <TextView
                android:singleLine="true"
                android:id="@+id/txt_school"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp1"
                android:text="Họ tên"
                android:textColor="@color/black"
                android:textSize="@dimen/text_14sp" />


            <TextView
                android:singleLine="true"
                android:id="@+id/txt_speed_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp1"
                android:text="Họ tên"
                android:textColor="@color/black"
                android:textSize="@dimen/text_14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView

                android:gravity="center"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Điểm"
                android:textColor="@color/black"
                android:textSize="@dimen/text_13sp" />
            <TextView
                android:textStyle="bold"
                android:gravity="center"
                android:id="@+id/txt_point"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="9"
                android:textColor="@color/red_test365"
                android:textSize="@dimen/text_15sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp5"
        android:layout_marginRight="@dimen/dp5" />

</RelativeLayout>