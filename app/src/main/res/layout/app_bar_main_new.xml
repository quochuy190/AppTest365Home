<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/bg_app"
    android:layout_height="@dimen/height_appbar_new">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_main"
            android:layout_width="match_parent"
            android:layout_height="@dimen/icon_back_appbar_new"
            android:layout_gravity="center_horizontal"
            android:baselineAligned="false"
            app:collapseIcon="@color/white"
            app:theme="@style/ToolbarStyle"
            app:titleTextColor="@color/white">

        </android.support.v7.widget.Toolbar>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/app_bar_cong" />

        <TextView
            android:id="@+id/txt_title_main"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/icon_back_appbar_new"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dp40"
            android:layout_marginRight="@dimen/dp40"
            android:gravity="center_horizontal|center_vertical"
            android:singleLine="true"
            android:textAllCaps="true"

            android:textColor="@color/white"
            android:textSize="@dimen/txt_appbar_new"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_search_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp40"
            android:layout_marginRight="@dimen/dp40"
            android:layout_weight="1"
            android:backgroundTint="@color/hint_white"
            android:hint="@string/hint_search"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_white"
            android:textSize="@dimen/text_15sp"

            android:visibility="gone" />

        <ImageView

            android:id="@+id/img_back"
            android:layout_width="@dimen/icon_back_appbar_new"
            android:layout_height="@dimen/icon_back_appbar_new"

            android:padding="@dimen/dp5"
            android:src="@drawable/ic_back_new"
            android:tint="@color/white"
            android:visibility="gone" />
    </RelativeLayout>
</android.support.design.widget.AppBarLayout>