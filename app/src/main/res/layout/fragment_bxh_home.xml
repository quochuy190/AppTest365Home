<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include layout="@layout/app_bar_main"/>

    <android.support.design.widget.TabLayout
        app:tabPaddingStart="-1dp"
        app:tabPaddingEnd="-1dp"
        android:id="@+id/tab_layout_bxh_home"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:background="@color/gray"
        app:tabIndicatorColor="@color/red_test365"
        app:tabSelectedTextColor="@color/red_test365"
        app:tabTextAppearance="@style/text_tab_thongke"
        app:tabTextColor="@color/app_bar">
    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpage_bxh_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>


</LinearLayout>