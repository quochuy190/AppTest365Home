<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/dp1"
    android:background="@drawable/spr_item_recycle"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:padding="@dimen/dp5"
        android:id="@+id/img_avata_children"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/item_avata_children"
        android:layout_height="@dimen/item_avata_children" />
    <LinearLayout
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:layout_toRightOf="@id/img_avata_children"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_school"
            android:textColor="@color/black"
            android:textSize="@dimen/text_16sp"
            android:padding="@dimen/dp3"
            android:maxLines="2"

            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_fullname"
            android:textStyle="bold"
            android:textColor="@color/red_test365"
            android:textSize="@dimen/text_16sp"
            android:padding="@dimen/dp3"
            android:singleLine="true"

            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_class"
            android:textColor="@color/black"
            android:textSize="@dimen/text_16sp"
            android:padding="@dimen/dp3"
            android:maxLines="1"

            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:visibility="gone"
            android:id="@+id/txt_user"
            android:textColor="@color/black"
            android:textSize="@dimen/text_17sp"
            android:padding="@dimen/dp3"
            android:maxLines="2"

            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:visibility="gone"
            android:id="@+id/txt_pass"
            android:textColor="@color/black"
            android:textSize="@dimen/text_17sp"
            android:padding="@dimen/dp3"
            android:maxLines="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>