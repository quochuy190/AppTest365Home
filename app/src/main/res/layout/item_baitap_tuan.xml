<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background_itemkho"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0.5dp"
    android:background="@color/white"
    android:paddingLeft="@dimen/dp5"
    android:paddingTop="@dimen/dp10"
    android:paddingRight="@dimen/dp5"
    android:paddingBottom="@dimen/dp10">

    <TextView
        android:id="@+id/txt_tentuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp5"
        android:padding="@dimen/dp5"

        android:textColor="@color/app_bar_new"
        android:textSize="@dimen/text_17sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_mota_tuan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp5"
        android:padding="@dimen/dp5"

        android:textColor="@color/black"
        android:textSize="@dimen/text_14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/img_sticker"
        app:layout_constraintTop_toBottomOf="@+id/txt_muctieu_tuan" />

    <TextView
        android:id="@+id/txt_muctieu_tuan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp5"
        android:padding="@dimen/dp5"
        android:textColor="@color/black"
        android:textSize="@dimen/text_14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/img_sticker"
        app:layout_constraintTop_toBottomOf="@+id/txt_tentuan" />
    <TextView
        android:visibility="gone"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:gravity="center"
        android:id="@+id/txt_point_tuan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp5"
        android:padding="@dimen/dp5"
        android:text="9đ"
        android:textColor="@color/app_bar_new"
        android:textSize="@dimen/text_18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/img_sticker"
        app:layout_constraintTop_toBottomOf="@+id/txt_mota_tuan" />
    <TextView
        android:id="@+id/txt_luuy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="1"
        android:padding="@dimen/dp5"
        android:text="@string/txt_luuy"
        android:textColor="#757d94"
        android:textSize="@dimen/text_13sp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_sticker"
        android:layout_width="@dimen/dp50"
        android:layout_height="@dimen/dp80"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button

        android:id="@+id/btn_taithem"
        android:layout_width="@dimen/dp200"
        android:layout_height="@dimen/dp35"
        android:layout_marginTop="@dimen/dp5"
        android:background="@drawable/spr_click_button"
        android:text="Tải thêm"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/text_16sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_luuy" />

</android.support.constraint.ConstraintLayout>